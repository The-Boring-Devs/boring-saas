<%= render 'shared/center_box' do %>
  <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
    Create your account
  </h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4 md:space-y-6' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: label_field_classes(f, :email) %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_field_classes(f, :email) %>
      <%= error_hint(f, :email) %>
    </div>

    <div>
      <%= f.label :password, class: label_field_classes(f, :password) %>
      <% if @minimum_password_length %>
        <em class="text-sm text-white">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: '••••••••', class: input_field_classes(f, :password) %>
      <%= error_hint(f, :password) %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: label_field_classes(f, :password_confirmation) %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '••••••••', class: input_field_classes(f, :password_confirmation) %>
      <%= error_hint(f, :password_confirmation) %>
    </div>

    <%= f.submit 'Sign up', class: 'w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800' %>

    <p class="text-sm font-light text-gray-500 dark:text-gray-400">
      Already have an account?
      <%= link_to "Sign in", new_user_session_path, class: 'font-medium text-primary-600 hover:underline dark:text-primary-500' %>
    </p>
  <% end %>
<% end %>